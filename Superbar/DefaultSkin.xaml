                                                <LinearGradientBrush.GradientStops>
                                                    <GradientStop Offset="0" Color="#7FFFFFFF"/>
                                                    <GradientStop Offset="0.75" Color="#40FFFFFF"/>
                                                    <GradientStop Offset="1" Color="#60FFFFFF"/>
                                                </LinearGradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush-->
