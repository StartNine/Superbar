    <Style x:Key="TaskbandStyle" TargetType="ListView">
        <Setter Property="IsSynchronizedWithCurrentItem" Value="True"/>
        <!--Setter Property="ItemContainerStyle" Value="{DynamicResource TaskItemButtonStyle}"/-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListView}">
                    <WrapPanel x:Name="TaskbandWrapPanel" IsItemsHost="True" Orientation="Horizontal"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type local:TaskItemGroup}">
                    <Grid Margin="2,0">
                        <ListView x:Name="TaskItemSubButtonsListView" Visibility="Visible" SelectedItem="{Binding ActiveWindowItem, Mode=TwoWay}" ItemsSource="{Binding Windows}" ItemContainerStyle="{DynamicResource TaskItemButtonStyle}" SelectionMode="Single" IsSynchronizedWithCurrentItem="True">
                            <ListView.Template>
                                <ControlTemplate TargetType="{x:Type ListView}">
                                    <StackPanel IsItemsHost="True" Orientation="Horizontal"/>
                                </ControlTemplate>
                            </ListView.Template>
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type prog:ProgramWindow}">
                                    <Grid Width="59">
                                        <!--ToggleButton Style="{DynamicResource TaskItemButtonStyle}" Tag="{Binding Hwnd, Mode=OneWay}" IsChecked="{Binding IsChecked, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListViewItem}}"-->
                                        <!--IsChecked="{Binding IsChecked, RelativeSource={RelativeSource Mode=TemplatedParent}}"-->
                                        <Canvas Width="32" Height="32" Background="{Binding Icon, Converter={StaticResource IconToImageBrushConverter}}"/>
                                        <!--/ToggleButton-->
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <StackPanel x:Name="CombinedRepresentation" Orientation="Horizontal" Visibility="Collapsed">
                            <Grid>
                                <ToggleButton x:Name="CombinedRepresentationToggleButton" IsChecked="{Binding IsActiveWindow, Mode=TwoWay}"/>
                                <!--Style="{DynamicResource TaskItemButtonStyle}"-->
                                <Canvas Width="32" Height="32" Background="{Binding Icon}"/>
                            </Grid>
                            <Rectangle x:Name="InnerGroupTab" Width="4" Fill="Black"/>
                            <Rectangle x:Name="OuterGroupTab" Width="4" Fill="Red"/>
                        </StackPanel>
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding CombineItems}" Value="True">
                            <Setter TargetName="CombinedRepresentation" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="TaskItemSubButtonsListView" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <!--DataTrigger Binding="{Binding Windows.Count}" Value="2">
                                <Setter TargetName="InnerGroupTab" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger-->
                        <DataTrigger Binding="{Binding GroupTabMode}" Value="Single">
                            <Setter TargetName="OuterGroupTab" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding GroupTabMode}" Value="None">
                            <Setter TargetName="OuterGroupTab" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="InnerGroupTab" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding GroupTabMode}" Value="NotRunning">
                            <Setter TargetName="OuterGroupTab" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="InnerGroupTab" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="CombinedRepresentationToggleButton" Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
